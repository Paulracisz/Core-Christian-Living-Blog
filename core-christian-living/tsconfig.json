{
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "plugins": [
      {
        "name": "vite:vue-tsc",
        "transform": "@vitejs/plugin-vue/tsc",
        "exposeFilename": false
      }
    ]
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/*.vue/*", "src/assets/*.css", "src/*.js/*.js", "src/*.js"]
}
